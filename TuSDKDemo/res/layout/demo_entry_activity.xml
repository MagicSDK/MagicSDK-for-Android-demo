<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView 
        android:id="@+id/lsq_demo_entry_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/lsq_homepage_bg"/>
      <!-- 特效相机  -->
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
	<LinearLayout 
        android:id="@+id/lsq_entry_camera"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="159dp"
		android:layout_gravity="center_horizontal"
	    android:orientation="vertical">

	    <ImageView 
	        android:id="@+id/lsq_homepage_camera"
	        android:layout_width="113dp"
	        android:layout_height="113dp"
	        android:background="@drawable/lsq_homepage_icon_camera"
	        android:scaleType="centerInside"/>
	    <TextView 
	        android:layout_width="65dp"
	      	android:layout_height="25dp"
	        android:layout_marginTop="13dp"
	        android:text="@string/component_camera"
	        android:textSize="14sp"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	</LinearLayout>
	 <!-- 照片美化  -->
	<LinearLayout 
        android:id="@+id/lsq_entry_editor"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginTop="69dp"
		android:layout_gravity="center_horizontal"
	    android:gravity="center_horizontal">

	    <ImageView 
	        android:id="@+id/lsq_homepage_beauty"
	        android:layout_width="113dp"
	        android:layout_height="113dp"
	        android:background="@drawable/lsq_homepage_icon_beauty"
	        android:scaleType="centerInside"/>
	    <TextView 
	        android:layout_width="65dp"
	      	android:layout_height="25dp"
	        android:layout_marginTop="13dp"
	        android:text="@string/component_editor"
	        android:textSize="18sp"
	        android:textColor="#fff"
	        android:gravity="center"
	        />
	</LinearLayout>
	</LinearLayout>
</RelativeLayout>